<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="800.0"
  minWidth="700.0" prefHeight="850.0" prefWidth="700.0"
  xmlns="http://javafx.com/javafx/8.0.171" fx:controller="main.Controller">
  <center>
    <TabPane BorderPane.alignment="CENTER" prefHeight="200.0" prefWidth="200.0"
      tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab text="Database">
          <content>
            <AnchorPane>
              <children>
                <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0" prefHeight="700.0"
                  prefWidth="600.0">
                  <children>
                    <HBox maxHeight="42.0" minWidth="30.0" prefHeight="42.0" prefWidth="600.0">
                      <VBox.margin>
                        <Insets left="10.0" right="10.0"/>
                      </VBox.margin>
                      <children>
                        <CheckComboBox title="Genre" fx:id="checkComboBox">
                          <HBox.margin>
                            <Insets top="7.0"/>
                          </HBox.margin>
                          <opaqueInsets>
                            <Insets right="10.0"/>
                          </opaqueInsets>
                        </CheckComboBox>
                        <TextField prefHeight="26.0" prefWidth="538.0" promptText="Search"
                          fx:id="searchField">
                          <HBox.margin>
                            <Insets left="5.0" right="7.0" top="7.0"/>
                          </HBox.margin>
                        </TextField>
                      </children>
                    </HBox>
                    <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="691.0"
                      prefWidth="600.0">
                      <items>
                        <TableView minHeight="450.0" minWidth="0.0" onMouseClicked="#displaySelectedMovie"
                          prefHeight="356.0" prefWidth="598.0"
                          fx:id="table">
                          <columns>
                            <TableColumn prefWidth="275.0" text="Title" fx:id="title"/>
                            <TableColumn minWidth="0.0" prefWidth="73.0" text="Year" fx:id="year"/>
                            <TableColumn prefWidth="254.0" text="Director" fx:id="director"/>
                            <TableColumn minWidth="0.0" prefWidth="45.0" fx:id="rating">
                              <graphic>
                                <FontIcon iconLiteral="typ-star-outline" iconSize="20"
                                  textAlignment="CENTER" wrappingWidth="23.579999923706055"/>
                              </graphic>
                            </TableColumn>
                            <TableColumn maxWidth="91.0" minWidth="0.0" prefWidth="51.0"
                              fx:id="subtitle">
                              <graphic>
                                <FontIcon iconLiteral="typ-document-text" iconSize="20"
                                  textAlignment="CENTER" wrappingWidth="12.34000015258789"/>
                              </graphic>
                            </TableColumn>
                          </columns>
                        </TableView>
                        <VBox prefHeight="227.0" prefWidth="598.0">
                          <children>
                            <GridPane alignment="TOP_RIGHT" prefHeight="231.0" prefWidth="598.0">
                              <children>
                                <AnchorPane GridPane.rowIndex="1">
                                  <GridPane.margin>
                                    <Insets left="10.0" top="10.0"/>
                                  </GridPane.margin>
                                  <children>
                                    <Rating AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" max="10"
                                      partialRating="true" prefHeight="32.0" prefWidth="307.0"
                                      rating="0.0" visible="false"
                                      fx:id="starRating"/>
                                  </children>
                                </AnchorPane>
                                <ImageView GridPane.columnIndex="1" GridPane.rowSpan="2147483647" cache="true"
                                  fitHeight="200.0" fitWidth="150.0" pickOnBounds="true"
                                  preserveRatio="true" fx:id="posterImage">
                                  <GridPane.margin>
                                    <Insets left="15.0" right="15.0"/>
                                  </GridPane.margin>
                                </ImageView>
                                <ProgressBar GridPane.rowIndex="2" prefHeight="22.0" prefWidth="159.0"
                                  progress="0.48" visible="false"/>
                                <TextArea editable="false" prefHeight="148.0" prefWidth="512.0"
                                  visible="false" wrapText="true" fx:id="text">
                                  <GridPane.margin>
                                    <Insets left="5.0" top="5.0"/>
                                  </GridPane.margin>
                                </TextArea>
                              </children>
                              <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="519.0"
                                  minWidth="10.0" prefWidth="517.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="292.0"
                                  minWidth="10.0" prefWidth="181.0"/>
                              </columnConstraints>
                              <rowConstraints>
                                <RowConstraints maxHeight="162.0" minHeight="10.0"
                                  prefHeight="162.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="47.0"
                                  vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="22.0" minHeight="0.0" prefHeight="22.0"
                                  vgrow="SOMETIMES"/>
                              </rowConstraints>
                            </GridPane>
                          </children>
                        </VBox>
                      </items>
                    </SplitPane>
                  </children>
                </VBox>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Status">
          <content>

          </content>
        </Tab>
      </tabs>
    </TabPane>
  </center>
  <rotationAxis>
    <Point3D/>
  </rotationAxis>
  <top>
    <ButtonBar prefHeight="81.0" prefWidth="580.0">
      <BorderPane.margin>
        <Insets left="20.0" right="20.0"/>
      </BorderPane.margin>
      <buttons>
        <Button style="-fx-background-radius: 20; -fx-border-radius: 20;" maxHeight="60.0" maxWidth="60.0" minHeight="60.0"
          minWidth="60.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="60.0"
          prefWidth="60.0" fx:id="refreshButton">
          <graphic>
            <FontIcon iconLiteral="typ-refresh-outline" iconSize="45"/>
          </graphic>
        </Button>
        <Button style="-fx-background-radius: 20; -fx-border-radius: 20;" layoutX="30.0" layoutY="21.0" maxHeight="60.0"
          maxWidth="60.0" minHeight="60.0" minWidth="60.0" mnemonicParsing="false"
          onAction="#buttonAction" prefHeight="60.0" prefWidth="60.0"
          fx:id="updateInfoButton">
          <graphic>
            <FontIcon iconLiteral="typ-arrow-sync-outline" iconSize="40"/>
          </graphic>
        </Button>
        <Button style="-fx-background-radius: 20; -fx-border-radius: 20;" layoutX="30.0" layoutY="21.0" maxHeight="60.0" maxWidth="60.0"
          minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#buttonAction"
          prefHeight="60.0" prefWidth="60.0"
          fx:id="downloadSub">
          <graphic>
            <FontIcon iconLiteral="typ-document-add" iconSize="45"/>
          </graphic>
        </Button>
        <Button style="-fx-background-radius: 20; -fx-border-radius: 20;" layoutX="30.0" layoutY="21.0" maxHeight="60.0"
          maxWidth="60.0" minHeight="60.0" minWidth="60.0" mnemonicParsing="false"
          onAction="#buttonAction" prefHeight="60.0" prefWidth="60.0"
          fx:id="settingsButton">
          <graphic>
            <FontIcon iconLiteral="typ-cog-outline" iconSize="45"/>
          </graphic>
        </Button>
        <Region prefHeight="81.0" prefWidth="315.0"/>
      </buttons>
    </ButtonBar>
  </top>
</BorderPane>
