<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
  minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
  fx:controller="ui.controller.Preference" fx:id="borderPane">
  <bottom>
    <ButtonBar BorderPane.alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
      <BorderPane.margin>
        <Insets left="10.0" right="10.0"/>
      </BorderPane.margin>
      <buttons>
        <Button mnemonicParsing="false" onAction="#buttonAction" text="Apply" fx:id="apply"/>
        <Button cancelButton="true" mnemonicParsing="false" onAction="#buttonAction" text="Cancel"
          fx:id="cancel"/>
      </buttons>
      <opaqueInsets>
        <Insets/>
      </opaqueInsets>
    </ButtonBar>
  </bottom>
  <center>
    <VBox BorderPane.alignment="CENTER" alignment="CENTER">
      <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0">
          <VBox.margin>
            <Insets left="10.0" right="10.0"/>
          </VBox.margin>
          <children>
            <Button mnemonicParsing="false" onAction="#buttonAction" text="Browse"
              fx:id="folderSelector"/>
            <Label text="Movie Folder"/>
            <TextField prefHeight="26.0" prefWidth="371.0" fx:id="dirPath"/>
          </children>
        </HBox>
      </children>
    </VBox>
  </center>
</BorderPane>
